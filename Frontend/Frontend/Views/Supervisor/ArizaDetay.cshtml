@model DTO.FaultReportDtos.GetFaultReportDto

@using Microsoft.AspNetCore.Mvc.Rendering

@{
    Layout = null;
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container my-5">
    <h2 class="mb-4">Arıza Detayları</h2>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">İsim Soyisim</dt>
                <dd class="col-sm-9">@Model.ReporterName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.ReporterEmail</dd>

                <dt class="col-sm-3">Telefon</dt>
                <dd class="col-sm-9">@Model.ReporterPhone</dd>

                <dt class="col-sm-3">Başlık</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Açıklama</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Tarih</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>

                <dt class="col-sm-3">Süpervizör</dt>
                <dd class="col-sm-9">@Model.AssignedByName</dd>

                <dt class="col-sm-3">Teknisyen</dt>
                <dd class="col-sm-9">@Model.AssignedToName </dd>

                <dt class="col-sm-3">Makine</dt>
                <dd class="col-sm-9">@Model.MachineName</dd>

                <dt class="col-sm-3">Departman</dt>
                <dd class="col-sm-9">@Model.DepartmanName</dd>

                <dt class="col-sm-3">Durum</dt>
                <dd class="col-sm-9">@Model.Status</dd>
            </dl>
        </div>
    </div>

    @if (string.IsNullOrEmpty(Model.AssignedToId)) 
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="mb-3">Teknisyen Ataması Yap</h4>

                <form asp-action="TeknisyenAta" asp-controller="Supervisor" method="post">
                    <input type="hidden" name="faultReportId" value="@Model.Id" />

                    <div class="mb-3">
                        <label for="assignedToId" class="form-label">Atanacak Teknisyen</label>
                        @Html.DropDownList("assignedToId", (List<SelectListItem>)ViewBag.Users, "Teknisyen Seç", new { @class = "form-select", id = "assignedToId" })
                    </div>

                    <button type="submit" class="btn btn-primary">Atama Yap</button>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-success">
            Bu arıza <strong>@Model.AssignedToName</strong> adlı teknisyene atanmıştır.
        </div>
    }
</div>

<!-- Bootstrap JS Bundle (Popper + JS) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
